# Anthropic API Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub API Configuration (Optional - increases rate limits)
GITHUB_TOKEN=your_github_token_here

# Server Configuration
PORT=18080

# OpenTelemetry Configuration
# Use HTTP endpoint for OTEL collector (default: http://localhost:4318/v1/traces)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_SERVICE_NAME=github-release-crawler
OTEL_SERVICE_VERSION=1.0.0
OTEL_RESOURCE_ATTRIBUTES=

# Optional: Override default OpenTelemetry settings
# OTEL_TRACES_EXPORTER=otlp
# OTEL_METRICS_EXPORTER=otlp
# OTEL_LOGS_EXPORTER=otlp